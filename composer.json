{
    "name": "starlit/db",
    "type": "library",
    "description": "A lightweight database abstraction layer.",
    "keywords": ["database", "MySQL", "PDO", "ORM"],
    "homepage": "http://github.com/starweb/starlit-db",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Starweb AB"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo_mysql": "*",
        "starlit/utils": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "monolog/monolog": "^1.0",
        "nesbot/carbon": "^1.2"
    },
    "autoload": {
        "psr-4": {"Starlit\\Db\\": "src"}
    },
    "suggest": {
        "monolog/monolog": "If you want to use the provided Monolog database logger handler",
        "nesbot/carbon": "Convert dateTime type into Carbon objects instead of DateTime"
    }
}
